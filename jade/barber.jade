extends _misc/main

block title
	| Главная страница

block content
	div(data-scroll-container)
		.person-view(data-scroll-section)
			- var imgs = ['https://tmbarbershop.com/wp-content/uploads/2023/11/usl03.jpg', 'https://tmbarbershop.com/wp-content/uploads/2023/11/ab01.jpg', 'https://tmbarbershop.com/wp-content/uploads/2023/11/edu2.jpg', 'https://i.artfile.me/wallpaper/23-01-2011/1920x1080/nsort--ne-vybirat---devushki--ne-vybirat-292617.jpg'];
			.swiper.person-view__big

				.swiper-wrapper

					each item in imgs
						.swiper-slide
							.person-view__box
								- for(var i=0; i<5; i++)
									div(class="person-view__segment person-view__segment--"+(i+1))
										div(class="person-view__img _fit person-view__img--"+(i+1))
											img._fit-img(src=item alt)


				button.swiper-button-prev
				button.swiper-button-next

			.person-view__mini(data-scroll data-scroll-speed="1")
				.swiper.person-view__thumb.thumb-person-view
					.swiper-wrapper
						each item in imgs
							.swiper-slide
								div(data-swiper-parallax-duration="1000" data-swiper-parallax-scale="1.5" data-swiper-parallax-x="100" class="_fit thumb-person-view__box")
									img._fit-img(src=item alt)
			
			.person-view__cover(data-scroll data-scroll-speed="10" data-scroll-position="bottom")

		section.cards(data-scroll-section)

			.__wrapper
				.wrapper
					- for(var i=0; i<12; i++)
						.card()
		div(data-scroll-section)

