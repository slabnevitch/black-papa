extends _misc/main

block title
	| Главная страница

block content
	div(data-scroll-container)#suka
		.person-view(data-scroll-section)
			- var imgs = ['img/barbers/obidov.jpg', 'https://tmbarbershop.com/wp-content/uploads/2023/11/usl03.jpg', 'https://tmbarbershop.com/wp-content/uploads/2023/11/ab01.jpg', 'https://tmbarbershop.com/wp-content/uploads/2023/11/edu2.jpg', /*'https://i.artfile.me/wallpaper/23-01-2011/1920x1080/nsort--ne-vybirat---devushki--ne-vybirat-292617.jpg'*/];
			.person-view__name.name-person-view(data-scroll data-scroll-speed="-1")
				.name-person-view__first() РУСТАМ
				.name-person-view__last() ОБИДОВ
				p.name-person-view__text Тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут тут ту
			
			.swiper.person-view__big


				.swiper-wrapper

					each item in imgs
						.swiper-slide
							.person-view__box
								- for(var i=0; i<5; i++)
									div(class="person-view__segment person-view__segment--"+(i+1))
										div(class="person-view__img _fit person-view__img--"+(i+1))
											img._fit-img(src=item alt)

			.person-view__actions
				button.btn(type="button") ЗАПИСАТЬСЯ
					+icon('shape-circle')
				button.person-view__scroll(type="button") Работы Pro.Barber'a
					img.icon-download(src="img/icons-svg/download.svg" alt="alt")

			.person-view__mini(data-scroll data-scroll-speed="1")
				.person-view__handlers
					button.person-view__prev Предыдущий
					button.person-view__next Следующий
				
				.thumb-person-view__wrapper
					.swiper.person-view__thumb.thumb-person-view
							.swiper-wrapper
								each item in imgs
									.swiper-slide
										div(data-swiper-parallax-duration="1000" data-swiper-parallax-scale="1.5" data-swiper-parallax-x="100" class="_fit thumb-person-view__box")
											img._fit-img(src=item alt)
			
			.person-view__cover
				//- (data-scroll-call="testEvent" data-scroll data-scroll-speed="1" data-scroll-position="bottom")

		.person-works#basic-waypoint( data-scroll-section)
			.person-works__wrapper
				.person-works__text
					.person-works__title Выполненные работы
					.person-works__p Работы с сентября по январь
					.person-works__p Является Pro.Barber
				
				
				.person-works__folio
					.person-works__slider(data-scroll data-scroll-call="pizda" data-scroll-id="hey")
						+swiper('works-swiper', false, false, true)
							- for(var i=0; i<20; i++)
								.swiper-slide.person-works__card
					.person-works__cards(data-scroll data-scroll-id="cards" data-scroll-offset="30%, 30%")
						- for(var i=0; i<20; i++)
							.person-works__card.animated.flipOutX
		
		//- div(data-scroll-section)

