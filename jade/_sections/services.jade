section.services._sect
	.services__decor
		img(src="img/decor-left.svg" alt="alt")
	.services__decor
		img(src="img/decor-right.svg" alt="alt")
	
	.services__wrapper
		+title('УСЛУГИ барбершопа', '8.8.7 art barbers?', 'Ознакомиться с прайсом на услуги и копмлексы вы можете ниже')

	.__wrapper.wrapper-mini
		.services__content.decored-bottom
			.block-decor
			.block-decor

			- var header = ['Название', 'Barber', 'PRO.Barber', 'Время'];
			- buttons = ['Голова', 'Лицо', 'Уход', 'Комплекс'];

			._tabs
				ul.tabs__buttons.services__buttons

					li
						a.tab.services__tab.active(href='#') Голова
					li
						a.tab.services__tab(href='#') Лицо
					li
						a.tab.services__tab(href='#') Уход
					li
						a.tab.services__tab(href='#') Комплекс
				
				ul.tabs__container
					li.tab-content.services__tab-content.active
