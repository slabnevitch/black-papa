										each skot, i in item
											div(class=skot === 'Бесплатно'?"table-services__col table-services__col--active" : "table-services__col")
												.table-services__label= header[i]
												.table-services__value= skot
					
					li.tab-content.services__tab-content.hidden
						- var tabFace = [['Геометрия бороды', '1800 ₽', '2000 ₽','60 мин'], ['Королевское бритье', '1800 ₽', '2000 ₽','60 мин'], ['Коррекция бороды', '1400 ₽', '1600 ₽','30 мин'], ['Камуфляж бороды', '1300 ₽', '1500 ₽','30 мин'], ['Стрижка бороды', '600 ₽', '800 ₽','30 мин']];
						.services__table.table-services
							.table-services__header
								.table-services__row
									each item in header
										.table-services__col= item

							.table-services__body
								each item in tabFace
									.table-services__row
										each skot, i in item
											div(class=skot === 'Бесплатно'?"table-services__col table-services__col--active" : "table-services__col")
												.table-services__label= header[i]
												.table-services__value= skot
					
					li.tab-content.services__tab-content.hidden
						- var tabCare = [['Black Mack', '1300 ₽', '1500 ₽','45 мин'], ['Удаление волос воском', '1100 ₽', '1300 ₽','20 мин'], ['Премиум мытье головы', '1000 ₽', '1100 ₽','15 мин'], ['Кератин', '700 ₽', '800 ₽','15 мин'], ['Массаж головы', '500 ₽', '600 ₽','15 мин'], ['Удаление волос воском 1 зона', '300 ₽', '400 ₽','5 мин']];
						.services__table.table-services
							.table-services__header
								.table-services__row
									each item in header
										.table-services__col= item

							.table-services__body
								each item in tabCare
